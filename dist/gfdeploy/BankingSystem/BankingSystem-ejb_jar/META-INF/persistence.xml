<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="BankingSystem-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/BankingSystem</jta-data-source>
    <class>entity.AtmCard</class>
    <class>entity.Customer</class>
    <class>entity.DepositAccount</class>
    <class>entity.DepositAccountTransaction</class>
    <class>entity.Employee</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
